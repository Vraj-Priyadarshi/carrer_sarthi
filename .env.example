# ===========================================
# Career Saarthi - Environment Variables
# ===========================================
# IMPORTANT: Copy this file to .env and fill in your values
# DO NOT commit the actual .env file!

# ===========================================
# Database Configuration
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=Career_Saarthi
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your_jwt_secret_key_here_generate_using_openssl_rand_base64_64
JWT_EXPIRATION_MS=2592000000

# ===========================================
# Google OAuth2
# ===========================================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ===========================================
# Email Configuration (Gmail)
# ===========================================
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_gmail_app_password

# ===========================================
# OpenAI / LLM Configuration (for ML services)
# ===========================================
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1

# Alternative: OpenRouter
# OPENAI_BASE_URL=https://openrouter.ai/api/v1
# OPENAI_API_KEY=your_openrouter_api_key

# ===========================================
# YouTube API
# ===========================================
YOUTUBE_API_KEY=your_youtube_api_key

# ===========================================
# Frontend Configuration
# ===========================================
FRONTEND_URL=http://localhost:5173

# ===========================================
# Backend Services Ports
# ===========================================
BACKEND_PORT=8080
ML_SKILL_PREDICT_PORT=8001
ML_RECOMMENDATIONS_PORT=8002
ML_SUGGESTIONS_PORT=8003
